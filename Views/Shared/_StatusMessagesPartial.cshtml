@if (TempData["notifications"] != null)
{
    @if (TempData["state"].ToString() == "success")
    {
        <div class="col-4 offset-8">
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["message"].ToString()!</strong>
            </div>
        </div>
    }
    else if (TempData["state"].ToString() == "info")
    {
        <div class="col-4 offset-8">
            <div class="alert alert-info" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["message"].ToString()!</strong>
            </div>
        </div>
    }
    else if (TempData["state"].ToString() == "warning")
    {
        <div class="col-4 offset-8">
            <div class="alert alert-warning" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["message"].ToString()!</strong>
            </div>
        </div>
    }
    else if (TempData["state"].ToString() == "error")
    {
        <div class="col-4 offset-8">
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["message"].ToString()!</strong>
            </div>
        </div>
    }
}


