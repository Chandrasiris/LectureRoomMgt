@model LectureRoomMgt.Models.TempLogin;

<form id="editForm">
    <input type="hidden" asp-for="EncryptAccessCode" />

    <div class="col-12">
        <div class="card">
            <div class="card-footer">
                <div class="form-group" style="text-align:center">
                    <div class="form-check form-check-inline mr-5">
                        <input class="form-check-input modalEdit" type="radio" asp-for="MUserType" name="inlineRadioOptions" id="inlineRadio3" checked="checked" disabled value="I">
                        <label class="form-check-label" for="inlineRadio3" style="font-size:large;font-weight:600">Staff</label>
                    </div>
                    <div class="form-check form-check-inline mr-5">
                        <input class="form-check-input modalEdit" type="radio" asp-for="MUserType" name="inlineRadioOptions" id="inlineRadio4" disabled value="L">
                        <label class="form-check-label" for="inlineRadio4" style="font-size:large;font-weight:600">Teacher</label>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="form-row">
        @if (Model.MUserType == "I")
        {
            <div class="form-group col-12 mb-3 general2">
                <label asp-for="MName" class="control-label"></label>
                <input asp-for="MName" class="form-control" />
                <span asp-validation-for="MName" class="text-danger"></span>
            </div>
            <div class="form-group col-12 mb-3 general2">
                <label asp-for="MTel" class="control-label"></label>
                <input asp-for="MTel" class="form-control" />
                <span asp-validation-for="MTel" class="text-danger"></span>
            </div>
            <div class="form-group col-12 mb-3" id="emailSection2">
                <label asp-for="MEmail" class="control-label"></label>
                <input asp-for="MEmail" class="form-control" />
                <span asp-validation-for="MEmail" class="text-danger"></span>
            </div>

        }
        @if (Model.MUserType == "L")
        {
            <div class="form-group col-12 mb-3 general2">
                <label asp-for="MName" class="control-label"></label>
                <input asp-for="MName" class="form-control" />
                <span asp-validation-for="MName" class="text-danger"></span>
            </div>
            <div class="form-group col-12 mb-3 general2">
                <label asp-for="MTel" class="control-label"></label>
                <input asp-for="MTel" class="form-control" />
                <span asp-validation-for="MTel" class="text-danger"></span>
            </div>
            <div class="form-group col-12 mb-3" id="emailSection2" style="display:none">
                <label asp-for="MEmail" class="control-label"></label>
                <input asp-for="MEmail" class="form-control" />
                <span asp-validation-for="MEmail" class="text-danger"></span>
            </div>
        }
    </div>
</form>


<script>
    $("#inlineRadio3").change(function () {
        $('#emailSection2').show();
        $('#admissionSection2').hide();
        $('.general2').show();
    });

    $("#inlineRadio4").change(function () {
        $('#emailSection2').hide();
        $('#admissionSection2').show();
        $('.general2').show();
    });

    $("#inlineRadio5").change(function () {
        $('#admissionSection2').show();
        $('.general2').hide();
        $('#emailSection2').hide();
    });


</script>