@model LectureRoomMgt.Models.TempLogin

<form id="requestAccessCode">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="text-align:center">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" name="inlineRadioOptions" id="inlineRadio1" checked="checked" value="S">
                    <label class="form-check-label" for="inlineRadio1">Student</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" name="inlineRadioOptions" id="inlineRadio2"  value="T">
                    <label class="form-check-label" for="inlineRadio2">Teacher</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" name="inlineRadioOptions" id="inlineRadio3" value="P">
                    <label class="form-check-label" for="inlineRadio3">Parent</label>
                </div>
            </div>


            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="input-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Your Name (Required)" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-file-signature"></span>
                    </div>
                </div>
            </div>

            <span asp-validation-for="NIC" class="text-danger"></span>
            <div class="input-group mb-3">
                <input asp-for="NIC" class="form-control" placeholder="Your NIC (Required)" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-id-card"></span>
                    </div>
                </div>
            </div>

            <span asp-validation-for="Tel" class="text-danger"></span>
            <div class="input-group mb-3">
                <input asp-for="Tel" class="form-control" placeholder="Telephone (Required)" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-phone-square"></span>
                    </div>
                </div>
            </div>


            <div id="UserState">
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
</form>

<script>

   $("#inlineRadio1").change(function () {
       $('#UserState').show();
   });
   $("#inlineRadio2").change(function () {
       $('#UserState').show();
   });
   $("#inlineRadio3").change(function () {
       $('#UserState').hide();
   });



</script>





